<h1 class='center'> jQuery Calculator </h1>
<hr />

<div id='calculator' class='container'>

  <div class='row'>
    <button class='btn btn-default col-sm-1 col-sm-offset-2' id='clr-btn'>Clear</button>
    <div id='screen' class='col-sm-7 '></div>
  </div>

  <div class='row'>
    <button class='btn btn-default col-sm-2 col-sm-offset-2 num-btn'>7</button>
    <button class='btn btn-default col-sm-2 num-btn'>8</button>
    <button class='btn btn-default col-sm-2 num-btn'>9</button>
    <button class='btn btn-default col-sm-2 op-btn'>/</button>
  </div>

  <div class='row'>
    <button class='btn btn-default col-sm-2 col-sm-offset-2 num-btn'>4</button>
    <button class='btn btn-default col-sm-2 num-btn'>5</button>
    <button class='btn btn-default col-sm-2 num-btn'>6</button>
    <button class='btn btn-default col-sm-2 op-btn'>*</button>
  </div>

  <div class='row'>
    <button class='btn btn-default col-sm-2 col-sm-offset-2 num-btn'>1</button>
    <button class='btn btn-default col-sm-2 num-btn'>2</button>
    <button class='btn btn-default col-sm-2 num-btn'>3</button>
    <button class='btn btn-default col-sm-2 op-btn'>-</button>
  </div>

  <div class='row'>
    <button class='btn btn-default col-sm-2 col-sm-offset-2 num-btn'>0</button>
    <button class='btn btn-default col-sm-2 num-btn'>.</button>
    <button class='btn btn-default col-sm-2 op-btn'>+</button>
    <button id='eq-btn' class='btn btn-default col-sm-2'>=</button>
  </div>
</div>
